#!/usr/bin/env bash

BASEDIR=$(dirname $(readlink ${BASH_SOURCE[0]}))

# Ubuntu stuff
. "$BASEDIR/ubuntu"

# Configuration options
. "$BASEDIR/config"

# Aliases
. "$BASEDIR/aliases"

# Include all functions
for file in $BASEDIR/functions/*
do
  . "$file"
done;

# Start screen
if [ -z "$STY" ]; then
    exec screen -RR
fi
