# Removes copyright message
startup_message off

# Satus line
hardstatus alwayslastline "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%< %= %c"

# Fixes delay after pressing ESC on vi
maptimeout 0

# Set terminal as xterm compatible
term xterm

# Remove the screen 0
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1
